<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= story.storyTitle %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            
            <form action="/story/<%= story._id %>/comments" method="POST">
                <div class="form-group">
                    <input class = "form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/story">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
