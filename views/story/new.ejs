<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new story</h1>
        <div style="width: 30%; margin: 25px auto;">
            
            <form action="/story" method="POST">
                <div class="form-group">
                    <input class = "form-control" type="text" name="storyTitle" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name="storyContent" placeholder="Content">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/story">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
