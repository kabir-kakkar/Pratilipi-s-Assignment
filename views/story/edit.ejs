<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= story.storyTitle %></h1>
        <div style="width: 30%; margin: 25px auto;">
            
            <!-- We have to make a put request here for updating the Route -->
            <form action="/story/<%= story._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class = "form-control" type="text" name="story[storyTitle]" value = "<%= story.storyTitle %>">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name="story[image]" value = "<%= story.image %>">
                </div>
                <div class="form-group">
                    <input class = "form-control" type="text" name="story[storyContent]" value = "<%= story.storyContent %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/story">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
